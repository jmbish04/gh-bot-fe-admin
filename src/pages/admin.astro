<script is:inline>
  // Basic theme detection without conflicting with React state management
  const detectInitialTheme = () => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('github-bot-app-store')) {
      try {
        const stored = JSON.parse(localStorage.getItem('github-bot-app-store'));
        if (stored?.state?.theme) {
          const theme = stored.state.theme;
          const isDark = theme === 'dark' || (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches);
          document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
          return;
        }
      } catch (e) {
        // Fallback to system preference
      }
    }
    // Default to system preference
    const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
  };
  
  // Apply theme immediately
  detectInitialTheme();
</script>

